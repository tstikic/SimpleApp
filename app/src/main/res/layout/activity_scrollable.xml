<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/why_testing_matters_title"
            android:textColor="@color/teal_700"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <!-- Introductory Text -->
        <TextView
            android:id="@+id/intro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/why_testing_matters_body"
            android:textSize="16sp"
            android:paddingBottom="16dp"/>

        <!-- ViewPager2 (Carousel) -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:clipToPadding="false"
            android:paddingTop="10dp"
            android:orientation="horizontal"/>

        <!-- TabLayout for Page Indicators -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- Manual vs. Automated Testing Section -->
        <TextView
            android:id="@+id/manual_vs_auto_title"
            android:textColor="@color/teal_700"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manual_vs_automated_testing_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/manual_testing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manual_vs_automated_testing_body"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/automated_testing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manual_vs_automated_testing_body2"
            android:textSize="16sp"
            android:paddingBottom="16dp"/>


        <TextView
            android:id="@+id/espresso_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/espresso_for_android_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:paddingBottom="8dp"/>


        <TextView
            android:id="@+id/espresso_advanced_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/espresso_subtext"
            android:textSize="16sp"
            android:paddingBottom="16dp"/>

        <!-- Button at the bottom (Requires scrolling) -->
        <Button
            android:id="@+id/start_learning_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_learning_espresso_btn_text"
            android:background="@drawable/round_corners"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:layout_marginTop="80dp"/>
    </LinearLayout>
</ScrollView>
