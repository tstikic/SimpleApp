<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Simple Login App"
        android:theme="@style/Theme.TestApplication">

        <!-- Declare LoginActivity -->
        <activity android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declare HomeActivity -->
        <activity android:name=".HomeActivity"></activity>
        <activity android:name=".RecyclerActivity" />
        <activity android:name=".ScrollableActivity" />
        <activity android:name=".DocumentUploadActivity" />
        <activity android:name=".ComposeActivity" />
        <activity android:name="androidx.activity.ComponentActivity" />
    </application>

</manifest>